#compiler
CC = g++ 
#linker
LD = g++
#linker flags
LDFLAGS = -Wall -g
#compiler flags
CFLAGS = -Wall -c -g -O3 -fopenmp 
#parallel libraries
P_LIBS =  -lgomp -ltiff -ljpeg -lpng -lz

#linker path
LD_PATH = 
#includes
INCLUDE = 
#defines for serial program
DEFS = -DOPENMP_PARALLEL  
#erase files
RM = /bin/rm -f
#parallel object files
P_OBJS = TIFFimage.o JPEGimage.o PNGimage.o image.o imageRaster.o openmpImageProcessing.o oldopenmpmain.o timer.o MemCheck.o
#program name
PROG = openmp







#first rule
all : $(PROG)


openmp : $(P_OBJS)
	$(LD) $(LDFLAGS) $(LD_PATH) $(P_OBJS) $(P_LIBS) -o $@

#%.o : %.cpp
#	$(CC) $(CFLAGS) $(INCLUDE) $(DEFS) $<

oldopenmpmain.o : oldopenmpmain.cpp
	$(CC) $(CFLAGS) $(INCLUDE) $(DEFS) $< -o $@

image.o : image.cpp
	$(CC) $(CFLAGS) $(INCLUDE) $(DEFS) $< -o $@

TIFFimage.o : TIFFimage.cpp 
	$(CC) $(CFLAGS) $(DEFS) $(INCLUDE) $< -o $@

JPEGimage.o : JPEGimage.cpp 
	$(CC) $(CFLAGS) $(DEFS) $(INCLUDE) $< -o $@

PNGimage.o : PNGimage.cpp
	$(CC) $(CFLAGS) $(DEFS) $(INCLUDE) $< -o $@

imageRaster.o : imageRaster.cpp
	$(CC) $(CFLAGS) $(DEFS) $< -o $@

ImageIOstream.o : ImageIOstream.cpp
	$(CC) $(CFLAGS) $(DEFS) $< -o $@

openmpImageProcessing.o : openmpImageProcessing.cpp
	$(CC) $(CFLAGS) $(DEFS) $< -o $@
	
timer.o : timer.cpp
	$(CC) $(CFLAGS) $< -o $@

MemCheck.o : MemCheck.cpp
	$(CC) $(CFLAGS) $(DEFS) $< -o $@





clean:
	$(RM) $(P_OBJS) *~
